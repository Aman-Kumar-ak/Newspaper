# Backend Environment Template
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=8080

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-frontend-domain.com

# JWT Configuration
JWT_SECRET=your_very_secure_random_jwt_secret_here_minimum_32_characters

# Google Drive API Configuration
# The folder ID where PDFs will be stored
DRIVE_ROOT_FOLDER_ID=optional_specific_folder_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
HELMET_ENABLED=true
TRUST_PROXY=true
